version: "3.4"

x-logging:
  &default-logging
  options:
    max-size: '50m'
    max-file: '1'
  driver: json-file

x-extended-logging:
  &extended-logging
  options:
    max-size: '500m'
    max-file: '1'
  driver: json-file

services:

  mongodb:
    image: mongo:3.4.10
    ports:
      - 27017:27017
    volumes:
      - {{MONGO_DATA_DIR}}:/data/db
    entrypoint: mongod --smallfiles --bind_ip "0.0.0.0" --wiredTigerCacheSizeGB 0.05
    restart: always
    logging: *extended-logging

  syncer:
    image: councilbox/quorum-explorer-syncer
    logging: *default-logging
    environment:
      - QUORUM_ENDPOINTS={{QUORUM_ENDPOINTS}}
    depends_on:
      - mongodb
    restart: always

  metrics:
    image: councilbox/quorum-explorer-metrics
    logging: *default-logging
    volumes:
      - ./synced-data:/opt/catenae/synced-data
    depends_on:
      - mongodb
    restart: always

  http-api:
    image: councilbox/quorum-explorer-http-api
    ports:
      - {{API_PORT}}:8080
    environment:
      - QUORUM_ENDPOINTS={{QUORUM_ENDPOINTS}}
      - EXTRA_DATA_FORMAT=ibft
    logging: *default-logging
    depends_on:
      - mongodb
    restart: always

  webapp:
    image: councilbox/quorum-explorer-webapp:{{WEBAPP_VERSION}}
    ports:
      - {{EXPLORER_PORT}}:80
    environment:
      - API_URL=http{{SSL}}://{{API_DOMAIN}}:{{EXTERNAL_API_PORT}}
    logging: *default-logging
    restart: always

  webapp_2:
    image: councilbox/quorum-explorer-webapp:{{WEBAPP_VERSION_2}}
    ports:
      - {{EXPLORER_PORT_2}}:80
    environment:
      - API_URL=http{{SSL}}://{{API_DOMAIN}}:{{EXTERNAL_API_PORT}}
    logging: *default-logging
    restart: always
